@model sistema_acessidoc.Models.Arquivos.ArquivoFormulario.UploadArquivoFormularioModel

@{
    ViewData["Title"] = "AcessiDoc";
    Layout = null;
}

@if (ViewBag.UploadMensagemArquivoNaoAnexado != null)
{
    <div class="custom-alert error">
        <span class="icon">&#9888;</span>
        @ViewBag.UploadMensagemArquivoNaoAnexado
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tela Inicial</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <strong><font color="#1f8420" size="5"> AcessiDoc </font></strong>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between mt-2">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AcessoRapido">
                            <strong><font color="#006400" size="3"> Acesso Rápido </font></strong>
                        </a>
                    </li>
                </ul>
                <div class="nav-item">
                    <div class="search-bar">
                        <input type="search" name="search" placeholder="Pesquisar" pattern=".*\S.*" required>
                        <button class="search-btn" type="submit">
                            <img src="~/icons/lupa.png" alt="Ícone de Pesquisa">
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="container-options">
        <section class="wrapper">
            <div class="container-options-cards">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                        <div class="card text-dark card-has-bg click-col" style="background-image:url('https://source.unsplash.com/600x900/?study,study');">
                            <img class="card-img d-none" src="https://source.unsplash.com/600x900/?study,study" alt="Design de Maneira Criativa Lorem Ipsum Sit Amet Consectetur dipisi?">
                            <div class="card-img-overlay d-flex flex-column">
                                <div class="card-body">
                                    <small class="card-meta mb-2"><strong>NOVA EDIÇÃO</strong></small>
                                    <h4 class="card-title mt-0">LIVRO</h4>
                                    <br />
                                    <form asp-controller="HomeController" asp-action="Upload" method="post" enctype="multipart/form-data">
                                        <p><strong>Selecione o tamanho da fonte e anexe um arquivo:</strong></p>
                                        <div>
                                            @if (Model != null)
                                            {
                                                <input type="radio" id="fonte_dezoito_null" name="fonte_arquivo" value="18" @(Model.TamanhoFonteArquivo.HasValue ? "checked" : "")>
                                                <label for="fonte_dezoito_null"><b>18</b></label>
                                                <br>
                                                <input type="radio" id="fonte_vinte_quatro_null" name="fonte_arquivo" value="24" @(Model.TamanhoFonteArquivo.HasValue ? "checked" : "")>
                                                <label for="fonte_vinte_quatro_null"><b>24</b></label>
                                                <br />
                                                <br />
                                                <br />
                                                <input type="hidden" name="MAX_FILE_SIZE" value="100" /> <input name="file" type="file" />
                                            }
                                            else
                                            {
                                                <div>
                                                    <input type="radio" id="fonte_dezoito_notnull" name="fonte_arquivo" value="18">
                                                    <label for="fonte_dezoito_notnull"><b>18</b></label>
                                                    <br>
                                                    <input type="radio" id="fonte_vinte_quatro_notnull" name="fonte_arquivo" value="24">
                                                    <label for="fonte_vinte_quatro_notnull"><b>24</b></label>
                                                    <br />
                                                    <br />
                                                    <input type="hidden" name="MAX_FILE_SIZE" value="100" /> <input name="file" type="file" />
                                                </div>
                                            }
                                        </div>
                                        <div>
                                            @Html.ValidationMessageFor(model => model.TamanhoFonteArquivo, "", new { @class = "text-danger" })
                                            @Html.ValidationMessageFor(model => model.ArquivoAnexadoFormulario, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="container-button">
                                            <button type="submit">Converter arquivo</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                        <div class="card text-dark card-has-bg click-col" style="background-image:url('https://source.unsplash.com/600x900/?book,school');">
                            <img class="card-img d-none" src="https://source.unsplash.com/600x900/?book,school" alt="Design de Maneira Criativa Lorem Ipsum Sit Amet Consectetur dipisi?">
                            <div class="card-img-overlay d-flex flex-column">
                                <div class="card-body">
                                    <small class="card-meta mb-2"><strong>NOVA EDIÇÃO</strong></small>
                                    <h4 class="card-title mt-0">PROVA</h4>
                                    <br />
                                    <form asp-controller="HomeController" asp-action="Upload" method="post" enctype="multipart/form-data">
                                        <p><strong>Selecione o tamanho da fonte e anexe um arquivo:</strong></p>
                                        <div>
                                            @if (Model != null)
                                            {
                                                <input type="radio" id="fonte_dezoito_null" name="fonte_arquivo" value="18" @(Model.TamanhoFonteArquivo.HasValue ? "checked" : "")>
                                                <label for="fonte_dezoito_null"><b>18</b></label>
                                                <br>
                                                <input type="radio" id="fonte_vinte_quatro_null" name="fonte_arquivo" value="24" @(Model.TamanhoFonteArquivo.HasValue ? "checked" : "")>
                                                <label for="fonte_vinte_quatro_null"><b>24</b></label>
                                                <br />
                                                <br />
                                                <input type="hidden" name="MAX_FILE_SIZE" value="100" /> <input name="file" type="file" />
                                            }
                                            else
                                            {
                                                <div>
                                                    <input type="radio" id="fonte_dezoito_notnull" name="fonte_arquivo" value="18">
                                                    <label for="fonte_dezoito_notnull"><b>18</b></label>
                                                    <br>
                                                    <input type="radio" id="fonte_vinte_quatro_notnull" name="fonte_arquivo" value="24">
                                                    <label for="fonte_vinte_quatro_notnull"><b>24</b></label>
                                                    <br />
                                                    <br />
                                                    <input type="hidden" name="MAX_FILE_SIZE" value="100" /> <input name="file" type="file" />
                                                </div>
                                            }
                                        </div>
                                        <div>
                                            @Html.ValidationMessageFor(model => model.TamanhoFonteArquivo, "", new { @class = "text-danger" })
                                            @Html.ValidationMessageFor(model => model.ArquivoAnexadoFormulario, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="container-button">
                                            <button type="submit">Converter arquivo</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.8.1/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>
